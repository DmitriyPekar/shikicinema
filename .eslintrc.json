{
    "env": {
        "browser": true,
        "es6": true,
        "webextensions": true,
        "node": true
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "no-undef": "error",
        "no-undefined": "error",
        "max-len": ["warn", 120]
    }
}
