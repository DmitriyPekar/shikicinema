{
  "manifest_version": 2,
  "name": "shikicinema",
  "version": "0.4.0",

  "icons": {
    "64": "assets/icon64.png",
    "128": "assets/icon128.png"
  },

  "description": "Returns video player on Shikimori",
  "content_security_policy": "default-src 'self'; frame-src *; font-src *; style-src 'unsafe-inline' https://*.googleapis.com https://unpkg.com; connect-src https://smarthard.net https://shikimori.org https://shikimori.one; script-src 'self'",

  "browser_specific_settings": {
    "gecko": {
      "id": "shikicinema@smarthard.net"
    }
  },

  "content_scripts": [
    {
      "matches": [
        "*://shikimori.org/*",
        "*://shikimori.one/*"
      ],
      "js": [
        "shikicinema.js"
      ],
      "css": [
        "shikicinema.css"
      ],
      "run_at": "document_idle"
    }
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "web_accessible_resources": [
    "assets/*.png",
    "src/views/*.html",
    "src/player-ui.js"
  ],

  "permissions": [
    "*://shikimori.org/*",
    "*://shikimori.one/*",
    "*://smarthard.net/*",
    "identity",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "tabs"
  ]
}
