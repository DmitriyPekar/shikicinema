{
  "manifest_version": 2,
  "name": "shikicinema",
  "version": "0.2.0",

  "description": "Returns video player on Shikimori",

  "content_scripts": [
    {
      "matches": [
        "*://shikimori.org/animes/*",
        "*://shikimori.one/animes/*"
      ],
      "js": [
        "shikicinema.js"
      ],
      "css": [
        "shikicinema.css"
      ],
      "run_at": "document_idle"
    }
  ],

  "web_accessible_resources": [
    "videos.csv"
  ]
}
