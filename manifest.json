{
  "manifest_version": 2,
  "name": "shikicinema",
  "version": "0.3.0",

  "icons": {
    "64": "assets/icon64.png",
    "128": "assets/icon128.png"
  },

  "description": "Returns video player on Shikimori",

  "content_scripts": [
    {
      "matches": [
        "*://shikimori.org/*",
        "*://shikimori.one/*"
      ],
      "js": [
        "shikicinema.min.js"
      ],
      "css": [
        "shikicinema.css"
      ],
      "run_at": "document_idle"
    }
  ],

  "web_accessible_resources": [
    "assets/fastforward.png",
    "assets/fastbackward.png",
    "assets/check_mark.png"
  ],

  "permissions": [
    "*://shikimori.org/*",
    "*://shikimori.one/*",
    "*://smarthard.net/*"
  ]
}
